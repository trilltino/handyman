# XF Tradesmen Production Environment Variables
#
# IMPORTANT: Copy this file to .env.production and fill in real values
# NEVER commit .env.production to version control

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL password (use Fly.io managed postgres or external provider)
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD_MIN_32_CHARS

# Database URL (set via fly secrets set DATABASE_URL=...)
# DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@db.internal:5432/xftradesmen

# =============================================================================
# JWT Authentication
# =============================================================================
# Generate with: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_SECURE_SECRET_MIN_64_CHARS

# Token expiration (30 days for remember-me functionality)
TOKEN_DURATION_HOURS=720

# =============================================================================
# Stripe Configuration (REQUIRED for payments)
# =============================================================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_REPLACE_WITH_LIVE_KEY

# Get from: https://dashboard.stripe.com/webhooks
# Webhook URL: https://xftradesmen.com/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_WEBHOOK_SECRET

# =============================================================================
# Email Configuration (for contact form notifications)
# =============================================================================
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@xftradesmen.com
SMTP_PASSWORD=REPLACE_WITH_EMAIL_PASSWORD
FROM_EMAIL=noreply@xftradesmen.com
ADMIN_EMAIL=admin@xftradesmen.com

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3000
RUST_LOG=info
